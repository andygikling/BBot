    <GroupBox Header="Connection" Style="{StaticResource CleanWPFGroupBoxStyle}">
        
        <Grid x:Name="grid_MainGrid">

            <TabControl x:Name="tab_MainTab" BorderBrush="Black" BorderThickness="2">
                <TabItem x:Name="tabItem_ConnectionCOM" Header="COM Port" Margin="-3,-3,0,-1" FontWeight="Bold" BorderBrush="#1A1F1E">
                    <Grid x:Name="grid_ConnectionCOM" Background="{StaticResource PurpleGrayBrush}" Margin="-4,-4,-4,-4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="93"/>
                            <ColumnDefinition Width="82"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="161"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txt_COMPortNum" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Bottom" Height="22" Margin="1,0,0,10" BorderThickness="2" BorderBrush="#1A1F1E" TextAlignment="Center" Background="#FFF0F0F0"
                                 Foreground="{StaticResource LightBlueBrush}">
                            <TextBox.Text>
                                <Binding Path="ComPortNumber" Mode="TwoWay"/>
                            </TextBox.Text>
                        </TextBox>
                        <Label x:Name="lbl_COMPortNum" Content="COM Port:" Height="26" Width="78" Margin="0,0,0,10" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                               Foreground="{StaticResource LightBlueBrush}"/>
                        <Label x:Name="lbl_COMPortStatus" Content="COM Port Open" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Width="100" Height="25" Grid.ColumnSpan="2"
                               Foreground="{StaticResource LightBlueBrush}" Grid.RowSpan="2" Margin="0,0,0,5"/>


                        <Button Grid.Row="0" Content="Open" Grid.Column="2" Click="ButtonOpen_Click" Margin="20,10,10,10" Grid.RowSpan="2"
                                Background="{StaticResource ButtonFaceGrayBrush}">
                            <Button.Effect>
                                <DropShadowEffect Direction="310" Opacity="0.8"/>
                            </Button.Effect>
                        </Button>
                        <Button Grid.Row="0" Content="Close" Grid.Column="3" Margin="10,10,20,10" UseLayoutRounding="False" Click="ButtonClose_Click" Grid.RowSpan="2"
                                Background="{StaticResource ButtonFaceGrayBrush}">
                            <Button.Effect>
                                <DropShadowEffect Direction="310" Opacity="0.8"/>
                            </Button.Effect>
                        </Button>
                        <!--<ToggleSwitch:HorizontalToggleSwitch Grid.Column="3" Grid.Row="0"></ToggleSwitch:HorizontalToggleSwitch>-->
                    </Grid>
               </TabItem>
            



                 
